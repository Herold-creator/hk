      line-height: 1.6;
    }

    .contact-form form {
      display: grid;
      gap: 20px;
    }

    label {
      font-weight: 500;
      margin-bottom: 5px;
    }

    input, textarea {
      padding: 10px;
      border: 1px solid #DCE6ED;
      border-radius: 6px;
      font-size: 1rem;
      font-family: inherit;
      width: 100%;
    }

    button {
